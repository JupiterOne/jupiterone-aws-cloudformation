{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "JupiterOne AWS Integration",
  "Metadata": {
    "AWS::CloudFormation::Interface": {
      "ParameterGroups": [
        {
          "Label": {
            "default": "JupiterOne Authentication Parameters"
          },
          "Parameters": ["J1AwsAccountId", "J1ExternalId"]
        }
      ],
      "ParameterLabels": {
        "J1AwsAccountId": {
          "default": "What is the JupiterOne AWS account Id?"
        },
        "J1ExternalId": {
          "default": "What is the JupiterOne external Id you were provided?"
        }
      }
    }
  },
  "Parameters": {
    "J1AwsAccountId": {
      "Description": "The JupiterOne AWS account Id",
      "Type": "String"
    },
    "J1ExternalId": {
      "Description": "The JupiterOne external Id",
      "Type": "String"
    }
  },
  "Resources": {
    "JupiterOneRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "ManagedPolicyArns": ["arn:aws:iam::aws:policy/SecurityAudit"],
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": "sts:AssumeRole",
              "Effect": "Allow",
              "Principal": {
                "AWS": {
                  "Fn::Join": [
                    "",
                    ["arn:aws:iam::", { "Ref": "J1AwsAccountId" }, ":role/JupiterOneIntegrationAws*"]
                  ]
                }
              },
              "Condition": {
                "StringEquals": {
                  "sts:ExternalId": {
                    "Ref": "J1ExternalId"
                  }
                }
              }
            }
          ]
        }
      }
    }
  },
  "Outputs": {
    "RoleARN": {
      "Description": "ARN of the JupiterOne role",
      "Value": {
        "Fn::GetAtt": ["JupiterOneRole", "Arn"]
      }
    }
  }
}
