{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description":
    "CloudFormation Template for JupiterOne AWS Integration Events",
  "Metadata": {
    "AWS::CloudFormation::Interface": {
      "ParameterGroups": [
        {
          "Label": {
            "default": "JupiterOne Authentication Parameters"
          },
          "Parameters": ["JupiterOneAwsAccountId"]
        }
      ],
      "ParameterLabels": {
        "JupiterOneAwsAccountId": {
          "default": "What is the JupiterOne AWS account ID?"
        }
      }
    }
  },
  "Parameters": {
    "JupiterOneAwsAccountId": {
      "Description": "The JupiterOne AWS account ID",
      "Type": "String",
      "Default": "612791702201"
    }
  },
  "Resources": {
    "JupiterOneCloudTrailIamRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "events.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "RoleName": "jupiterone-cloudtrail-events",
        "Description": "Send CloudTrail Events to JupiterOne",
        "Policies": [
          {
            "PolicyName": "jupiterone-cloudtrail-events-policy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": ["events:PutEvents"],
                  "Resource": [
                    {
                      "Fn::Join": [
                        ":",
                        [
                          "arn:aws:events",
                          {
                            "Ref": "AWS::Region"
                          },
                          {
                            "Ref": "JupiterOneAwsAccountId"
                          },
                          "event-bus/jupiter-integration-aws"
                        ]
                      ]
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    },
    "JupiterOneCloudTrailEventsRule": {
      "Type": "AWS::Events::Rule",
      "Properties": {
        "Name": "jupiterone-cloudtrail-events",
        "Description": "Send CloudTrail Events to JupiterOne",
        "EventPattern": {
          "source": [
            "aws.s3",
            "aws.iam",
            "aws.ec2",
            "aws.autoscaling",
            "aws.rds",
            "aws.redshift"
          ],
          "detail-type": ["AWS API Call via CloudTrail"],
          "detail": {
            "eventSource": [
              "s3.amazonaws.com",
              "iam.amazonaws.com",
              "ec2.amazonaws.com",
              "autoscaling.amazonaws.com",
              "rds.amazonaws.com",
              "redshift.amazonaws.com"
            ],
            "eventName": [
              "CreateAutoScalingGroup",
              "UpdateAutoScalingGroup",
              "DeleteAutoScalingGroup",
              "CreateBucket",
              "DeleteBucketEncryption",
              "PutBucketAcl",
              "PutBucketEncryption",
              "PutBucketInventoryConfiguration",
              "PutBucketLifecycle",
              "PutBucketLogging",
              "PutBucketPolicy",
              "PutBucketReplication",
              "PutBucketTagging",
              "PutBucketVersioning",
              "PutObjectLockConfiguration",
              "PutPublicAccessBlock",
              "CreateAccessKey",
              "CreateGroup",
              "CreatePolicy",
              "CreateRole",
              "CreateUser",
              "CreateSecurityGroup",
              "DeleteSecurityGroup",
              "RunInstances",
              "StartInstances",
              "StopInstances",
              "TerminateInstances",
              "CreateFleet",
              "CreateDBInstance",
              "ModifyDBInstance",
              "StartDBInstance",
              "StopDBInstance",
              "DeleteDBInstance",
              "CreateDBCluster",
              "ModifyDBCluster",
              "StartDBCluster",
              "StopDBCluster",
              "DeleteDBCluster",
              "CreateDBSnapshot",
              "DeleteDBSnapshot",
              "CreateDBClusterSnapshot",
              "DeleteDBClusterSnapshot",
              "CreateCluster",
              "ModifyCluster",
              "DeleteCluster",
              "CreateImage",
              "RegisterImage",
              "CreateSnapshot",
              "CreateSnapshots",
              "ModifyInstanceAttribute",
              "AuthorizeSecurityGroupIngress",
              "AuthorizeSecurityGroupEgress"
            ]
          }
        },
        "Targets": [
          {
            "Arn": {
              "Fn::Join": [
                ":",
                [
                  "arn:aws:events",
                  {
                    "Ref": "AWS::Region"
                  },
                  {
                    "Ref": "JupiterOneAwsAccountId"
                  },
                  "event-bus/jupiter-integration-aws"
                ]
              ]
            },
            "Id": "jupiterone_aws_integration_event_bus",
            "RoleArn": {
              "Fn::GetAtt": ["JupiterOneCloudTrailIamRole", "Arn"]
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "RuleARN": {
      "Description":
        "ARN of the EventBridge rule configured to send CloudTrail events to JupiterOne",
      "Value": {
        "Fn::GetAtt": ["JupiterOneCloudTrailEventsRule", "Arn"]
      }
    }
  }
}
